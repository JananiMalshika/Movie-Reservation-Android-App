<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-12dp" />

    <View
        android:id="@+id/acc_name"
        android:layout_width="357dp"
        android:layout_height="39dp"

        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="#2B3543"
        android:backgroundTintMode="add"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:id="@+id/acc_phone"
        android:layout_width="357dp"
        android:layout_height="39dp"

        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="#2B3543"
        android:backgroundTintMode="add"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="300dp"
        android:text="USER NAME"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="316dp"
        android:text="BIRTHDAY"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_phone" />

    <View
        android:id="@+id/acc_bday"
        android:layout_width="357dp"
        android:layout_height="39dp"

        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="#2B3543"
        android:backgroundTintMode="add"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="335dp"
        android:text="PHONE"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_email" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="339dp"
        android:text="EMAIL"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_name" />

    <View
        android:id="@+id/acc_email"
        android:layout_width="357dp"
        android:layout_height="39dp"

        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="#2B3543"
        android:backgroundTintMode="add"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/acc_phone"
        app:layout_constraintStart_toStartOf="@+id/acc_phone"
        app:layout_constraintTop_toTopOf="@+id/acc_phone"
        app:srcCompat="@drawable/ic_baseline_phone_android_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/acc_bday"
        app:layout_constraintStart_toStartOf="@+id/acc_bday"
        app:layout_constraintTop_toTopOf="@+id/acc_bday"
        app:srcCompat="@drawable/ic_outline_cake_24" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/acc_email"
        app:layout_constraintStart_toStartOf="@+id/acc_email"
        app:layout_constraintTop_toTopOf="@+id/acc_email"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/ic_baseline_mail_outline_24" />

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView2"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.042">

        <ImageView
            android:id="@+id/acc_userimg"
            android:layout_width="140dp"
            android:layout_height="92dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/userimg" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/changePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changePhoto"
        android:textColor="@color/light_blue"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <Button
        android:id="@+id/savechanges_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/light_green"
        android:text="Save Changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_bday" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/acc_name"
        app:layout_constraintStart_toStartOf="@+id/acc_name"
        app:layout_constraintTop_toTopOf="@+id/acc_name"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/ic_outline_account_circle_24" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:text="@string/userName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/acc_name"
        app:layout_constraintEnd_toEndOf="@+id/acc_name"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/acc_name"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="231dp"
        android:layout_height="22dp"
        android:text="@string/userEmail"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/acc_email"
        app:layout_constraintEnd_toEndOf="@+id/acc_email"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/acc_email"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="231dp"
        android:layout_height="22dp"
        android:text="@string/userPhone"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/acc_phone"
        app:layout_constraintEnd_toEndOf="@+id/acc_phone"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/acc_phone"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="231dp"
        android:layout_height="22dp"
        android:text="@string/userBday"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/acc_bday"
        app:layout_constraintEnd_toEndOf="@+id/acc_bday"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/acc_bday" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_accinfo"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toTopOf="@+id/include" />


</androidx.constraintlayout.widget.ConstraintLayout>